    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            // para rodar um arquivo python puro
            // "program": "${file}",
            // para rodar um projeto flask
            "module": "flask",
            "env": {
                "FLASK_APP": "${file}",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        }
    ]
}